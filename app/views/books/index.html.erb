<h1>Books</h1>
<% @books.each do |book| %>
<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th><%= link_to "show", book_path(book.id) %></th>
    <th><%= link_to "delete",destroy_list_path(@book.id), method: :delete, "data-confirm" => "Are you sure?" %></th>
  </tr>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td></td>
  </tr>
</table>
<% end %>

<h2>New Book</h2>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Body</h4>
  <%= f.text_area :body %>
  
  <%= f.submit 'Create Book' %>
<% end %>  